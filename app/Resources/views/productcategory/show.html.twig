{% extends 'base.html.twig' %}

{% block title %}View category{% endblock %}

{% block body %}
    <h1>Product Category</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ productCategory.id }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ productCategory.slug }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ productCategory.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ productCategory.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ productCategory.image }}</td>
            </tr>
            <tr>
                <th>Rank</th>
                <td>{{ productCategory.rank }}</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>{% if productCategory.createdAt %}{{ productCategory.createdAt|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated At</th>
                <td>{% if productCategory.updatedAt %}{{ productCategory.updatedAt|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-primary" href="{{ path('admin_product-category_index') }}">Back to the list</a>
        </li>
        <li>
            <a class="btn btn-warning" href="{{ path('admin_product-category_edit', { 'id': productCategory.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-error" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
