{% extends 'base.html.twig' %}

{% block title %}View category{% endblock %}

{% block body %}
    <h1>Product Category</h1>
<div class="w3-third">
    <table class="w3-table-all">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ productCategory.id }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ productCategory.slug }}</td>
            </tr>
            <tr>
                <th>Parent</th>
                <td>{% if productCategory.parent %}{{ productCategory.parent.title }}{% endif %}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ productCategory.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ productCategory.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ productCategory.image }}</td>
            </tr>
            <tr>
                <th>Rank</th>
                <td>{{ productCategory.rank }}</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>{% if productCategory.createdAt %}{{ productCategory.createdAt|date('d/m/Y') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated At</th>
                <td>{% if productCategory.updatedAt %}{{ productCategory.updatedAt|date('d/m/Y') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>


    <ul style="list-style-type: none; " class="w3-margin-bottom">
        <li>
            <a class="w3-btn w3-blue w3-round-large w3-margin-bottom" href="{{ path('admin_product-category_index') }}">Back to the list</a>
        </li>
        <li>
            <a class="w3-btn w3-yellow w3-round-large w3-margin-bottom" href="{{ path('admin_product-category_edit', { 'id': productCategory.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="w3-btn w3-red w3-round-large w3-margin-bottom" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>

    {% for child in children %}
    {{ child.title }}
    {% endfor %}


</div>
{% endblock %}
