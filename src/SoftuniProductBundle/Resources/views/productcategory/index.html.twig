{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categories list</h1>

    <table class="w3-table-all">
        <thead>
            <tr class="w3-teal">
                <th>Id</th>
                <th>Slug</th>
                <th>Title</th>
                <th>Description</th>
                <th>Image</th>
                <th>Rank</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for productCategory in productCategories %}
            <tr>
                <td><a href="{{ path('admin_product-category_show', { 'id': productCategory.id }) }}">{{ productCategory.id }}</a></td>
                <td>{{ productCategory.slug }}</td>
                <td>{{ productCategory.title }}</td>
                <td>{{ productCategory.description }}</td>
                <td>{{ productCategory.image }}</td>
                <td>{{ productCategory.rank }}</td>
                <td>{% if productCategory.createdAt %}{{ productCategory.createdAt|date('d/m/Y') }}{% endif %}</td>
                <td>{% if productCategory.updatedAt %}{{ productCategory.updatedAt|date('d/m/Y') }}{% endif %}</td>
                <td>
                    <a class="w3-btn w3-green w3-round-large" href="{{ path('admin_product-category_show', { 'id': productCategory.id }) }}">Show</a>
                    <a class="w3-btn w3-yellow w3-round-large" href="{{ path('admin_product-category_edit', { 'id': productCategory.id }) }}">Edit</a>
                    <a class="w3-btn w3-red w3-round-large" href="#">Remove</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {#<ul>#}
        {#<li>#}
    <br>
            <a class="w3-btn w3-blue w3-round-large" href="{{ path('admin_product-category_new') }}">Add Category</a>
        {#</li>#}
    {#</ul>#}
{% endblock %}
