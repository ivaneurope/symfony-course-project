{% extends 'base.html.twig' %}

{% block body %}
    <h1>Products list</h1>

    <table class="w3-table-all">
        <thead>
            <tr class="w3-teal">
                <th>Id</th>
                <th>Code</th>
                <th>Slug</th>
                <th>Title</th>
                <th>Subtitle</th>
                <th>Description</th>
                <th>Image</th>
                <th>Price</th>
                <th>Rank</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td><a href="{{ path('admin_product_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                <td>{{ product.code }}</td>
                <td>{{ product.slug }}</td>
                <td>{{ product.title }}</td>
                <td>{{ product.subtitle }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.image }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.rank }}</td>
                <td>{% if product.createdAt %}{{ product.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if product.updatedAt %}{{ product.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    {#<ul>#}
                        {#<li>#}
                            <a class="w3-btn w3-green w3-round-large" href="{{ path('admin_product_show', { 'id': product.id }) }}">Show</a>
                        {#</li>#}
                        {#<li>#}
                            <a class="w3-btn w3-yellow w3-round-large" href="{{ path('admin_product_edit', { 'id': product.id }) }}">Edit</a>
                            <a class="w3-btn w3-red w3-round-large" href="#">Remove</a>

                        {#</li>#}
                    {#</ul>#}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {#<ul>#}
        {#<li>#}
            <a class="w3-btn w3-blue w3-round-large" href="{{ path('admin_product_new') }}">Create a new product</a>
        {#</li>#}
    {#</ul>#}
{% endblock %}
